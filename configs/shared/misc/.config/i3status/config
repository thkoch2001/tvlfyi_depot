general {
        markup = "pango"
        separator = " "
        colors = true
}

order += "tztime lon"
order += "tztime est"
order += "tztime pst"
order += "disk /"

disk "/" {
     prefix_type = "decimal"
     format = "%used/%total"
}

# Useful commands for dealing with timezones:
# - cat /etc/timezone
# - man date
# - timedatectl
tztime lon {
     format = "LON %H:%M"
     timezone = "Europe/London"
}

tztime est {
     format = "NYC %H:%M"
     timezone = "US/Eastern"
}

tztime pst {
     format = "MTV %H:%M"
     timezone = "US/Pacific"
}