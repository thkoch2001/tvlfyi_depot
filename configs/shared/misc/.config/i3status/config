general {
        markup = "pango"
        separator = " "
        colors = true
}

order += "time"
order += "tztime est"
order += "tztime pst"
order += "disk /"

disk "/" {
     prefix_type = "decimal"
     format = "%avail / %total"
}

time {
     format = "%H:%M - %D"
}

tztime est {
     format = "%H:%M EST"
     timezone = "US/Eastern"
}

tztime pst {
     format = "%H:%M PST"
     timezone = "US/Pacific"
}