(require 'display)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Monitor Configuration
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(display-register laptop
                  :output "eDP-1"
                  :primary t
                  :coords (0 0)
                  :size (1920 1080)
                  :rate 30.0
                  :dpi 144
                  :rotate normal)

(display-arrangement primary :displays (laptop))
